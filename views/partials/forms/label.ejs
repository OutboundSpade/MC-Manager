<% data.text = data.text === undefined ? data.name : data.text %> <% data.name =
data.name === undefined ? data.text : data.name %>

<div class="mb-3 iput">
  <label
    for="<%=
  data.name+"-iput" %>"
    class="form-label formLabel"
    ><%= data.text %>
  </label>
  <input type="text" class="form-control" name="<%= data.name %>" id="<%=
  data.name+"-iput" %>" aria-describedby="helpId invalid-feedback" oninput="<%= data.oninput === undefined ? "" : data.oninput %> " placeholder="<%=
  data.placeholder === undefined ? "" : data.placeholder %>" <% if
  (data.required) { %> required <% } %> />
  <small id="helpId" class="form-text text-muted"
    ><%= data.helpText === undefined ? "" : helpText%>
  </small>
</div>
